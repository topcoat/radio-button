/* topdoc

  name:
    radio

  description:
    Default  styles for Topcoat radioes.
    The `<label>` needs to be placed after the `<input>` element in the HTML.

    .topcoat-radio
    .topcoat-radio__label--left Position the control to the left of the label
    .topcoat-radio__label--right Position the control to the right of the label

  modifiers:
    :focus - Focus state
    .is-focused - Simulates an focus state on mobile devices
    :disabled - Disabled state
    .is-disabled - Simulates a disabled state on mobile devices


  examples:

    <!-- No label -->

    <div class="topcoat-radio">
      <input type="radio" id="radio1">
      <label for="radio1" class="topcoat-radio__label"></label>
    </div>

    <div class="topcoat-radio">
      <input type="radio" id="radio2" checked="checked">
      <label for="radio2" class="topcoat-radio__label"></label>
    </div>

    <div class="topcoat-radio is-disabled">
      <input type="radio" id="radio3">
      <label for="radio3" class="topcoat-radio__label"></label>
    </div>

    <!-- Label on right side -->

    <div class="topcoat-radio">
      <input type="radio" id="radio4">
      <label for="radio4" class="topcoat-radio__label--right">Label on the right</label>
    </div>

    <div class="topcoat-radio">
      <input type="radio" id="radio5" checked="checked">
      <label for="radio5" class="topcoat-radio__label--right">Label on the right</label>
    </div>

    <div class="topcoat-radio is-disabled">
      <input type="radio" id="radio6">
      <label for="radio6" class="topcoat-radio__label--right">Label on the right</label>
    </div>

    <!-- Label on left side -->

    <div class="topcoat-radio">
      <input type="radio" id="radio7">
      <label for="radio7" class="topcoat-radio__label--left">Label on the left</label>
    </div>

    <div class="topcoat-radio">
      <input type="radio" id="radio8" checked="checked">
      <label for="radio8" class="topcoat-radio__label--left">Label on the left</label>
    </div>

    <div class="topcoat-radio is-disabled">
      <input type="radio" id="radio9">
      <label for="radio9" class="topcoat-radio__label--left">Label on the left</label>
    </div>
*/

.topcoat-radio
  @extend .radio
  height var-height--radio

input[type="radio"]:checked + label:after
  opacity 1

.topcoat-radio__label:before,
.topcoat-radio__label--right:before,
.topcoat-radio__label--left:before
  @extend .radio__label:before
  width var-width--radio__background
  height var-height--radio__background
  background var-background-color
  border var-border
  border-radius 50%
  cursor pointer
  box-shadow var-box-shadow

input[type="radio"]:focus + .topcoat-radio__label:before
  box-shadow 0 0 3px rgba(111,181,241,1);
  

.topcoat-radio__label--right:before
    left 0

.topcoat-radio__label--left:before
    right 0

.topcoat-radio__label,
.topcoat-radio__label--left,
.topcoat-radio__label--right
  padding-right var-width--checkbox__background
  line-height var-height--radio
  font-weight var-font-weight
  color var-color
  @extend .radio__label

.topcoat-radio__label--left
  padding-right var-padding--radio__label

.topcoat-radio__label--right
  padding-right 0
  padding-left var-padding--radio__label

.topcoat-radio__label:after,
.topcoat-radio__label--left:after
.topcoat-radio__label--right:after
  @extend .radio__label:after
  opacity 0
  width var-width--radiomark
  height var-width--radiomark
  left 50%
  top 50%
  margin-left -8px
  margin-top -2px
  background #666
  border-radius 50%

.topcoat-radio__label--left:after
  right var-right--checkmark

.topcoat-radio__label--right:after
  left var-left--checkmark

